<%- include('../partials/header') -%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;300;400;500;700;900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <main>
      <h2 class="text-center text-lg font-bold text-blue-700 mb-5 mt-5">Edit Remark</h2> 
      <section class="mb-10 flex justify-center">
        <form action="/remarks/<%= remark.id  %>/edit" method="POST" class="flex flex-col w-1/4 items-center border-2 p-5">
            <textarea name="title" placeholder="Enter remark" id="" rows="3" class="w-full p-2 border border-gray-500 mb-5">
              <%= remark.title  %> 
            </textarea>
            <input type="text" placeholder="Enter author" name="author" class="w-full p-2 border border-gray-500 mb-5" value="<%= remark.author %>"/>
            <button class="px-1 py-1 bg-indigo-400 rounded text-white font-bold text-xs hover:bg-purple-600">
              Update Remark 
            </button>
        </form>
    </section>
    </main>
  </body>
</html>
<%- include('../partials/footer') -%>
