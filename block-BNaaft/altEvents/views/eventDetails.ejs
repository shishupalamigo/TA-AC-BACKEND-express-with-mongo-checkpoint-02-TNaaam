<%- include('../partials/header') -%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    <script
      src="https://kit.fontawesome.com/7c7efbb78c.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>

    <main class="">
      <section class="container-xl m-5">
          
        <h1 class="text-2xl font-bold mb-5 text-purple-900"><%= event.title %></h1>
        <div class="flex">
          <p>
            <% event.event_category.forEach((ele)=>{ %>
              <span class="text-xs border-2 border-gray-500 px-1 py-2 rounded"><%= ele %></span>
            <% }) %>
          </p>
        </div>
        <div class="flex">
          <div class="flex flex-col w-3/4 py-5">
            <p class="pb-5"><%= event.summary %></p>
            <div class="flex items-center">
              <span class="mr-5 text-red-500">Likes: <%= event.likes %> </span>
                <a href="/events/<%= event.id  %>/like/inc" class="mr-5">
                  <button class="px-3 py-2 bg-green-500 rounded text-white font-bold hover:bg-indigo-700">
                    <i class="fas fa-thumbs-up"></i>
                  </button>
                </a>
                <a href="/events/<%= event.id  %>/like/dec" class="mr-5">
                  <button class="px-3 py-2 bg-red-600 rounded text-white font-bold hover:bg-yellow-400">
                    <i class="fas fa-thumbs-down"></i>
                  </button>
                </a>
            </div>
          </div>
          <div class="ml-10">
            <h4 class="text-xl mb-2">Hosted By :- <span class="text-blue-700 ml-3"><%= event.host %></span></h4>
            <h4 class="text-xl mb-2">At:- <span class="text-green-900 ml-3"><%= event.location %></span></h4>
            <h6 class="text-base mb-2">Starts on :- <span class="font-bold"> <%= event.start_date %></span></h6>
            <h6 class="text-base mb-2">Ends on :- <span class="font-bold"> <%= event.end_date %></span></h6>
          </div>
        </div>
        <div class="mb-5 flex justify-center">
          <a href="/events/<%= event.id  %>/edit" class="mr-5">
            <button class="px-3 py-2 bg-green-800 rounded text-white font-bold hover:bg-pink-400">
                Edit Event
            </button>
          </a>
          <a href="/events/<%= event.id  %>/delete" class="btn btn-sec">
            <button class="px-3 py-2 bg-pink-600 rounded text-white font-bold hover:bg-red-600">
              Delete Event
            </button>
          </a>
        </div>
      </section>
      <hr class="mt-10 mb-10" />
      <section class="mb-10">
          <form action="/events/<%= event.id  %>/remarks/new" method="POST" class="flex flex-col w-1/4 items-center">
              <textarea name="title" placeholder="Enter remark" id="" rows="3" class="w-full p-2 border border-gray-500 mb-5"></textarea>
              <input type="text" placeholder="Enter author" name="author" class="w-full p-2 border border-gray-500 mb-5" />
              <button class="px-1 py-1 bg-indigo-400 rounded text-white font-bold text-xs hover:bg-purple-600">Add Remark</button>
          </form>
      </section>

      <section class="">
        <h2 class="text-xl font-bold text-green-900 mb-6">Remarks</h2>
        <div class="flex flex-wrap justify-around">
          <% event.remarks.forEach(ele=>{ %>
          <article class="border p-5 w-3/12  mb-5">
              <h3 class="text-lg text-gray-700 mb-3"><%= ele.title %></h3>
              <span class="text-base font-thin text-gray-600 mb-3">By:-<%= ele.author %> </span>
              <h6 class="text-base text-red-400 mb-3">Likes:- <%= ele.likes %></h6>
              <a href="/remarks/<%= ele.id  %>/likes/inc">
                <button class="px-1 py-1 bg-green-400 rounded text-white font-thin text-xs hover:bg-green-900">
                  <i class="fas fa-thumbs-up"></i>
                </button>
              </a>
              <a href="/remarks/<%= ele.id  %>/likes/dec">
                <button class="px-1 py-1 bg-red-400 rounded text-white font-thin text-xs hover:bg-purple-600">
                  <i class="fas fa-thumbs-down"></i>
                </button>
              </a>
              <div class="flex justify-between mt-6">
                <a href="/remarks/<%= ele.id  %>/edit" class="btn btn-pri">
                  <button class="px-1 py-1 bg-green-400 rounded text-white font-medium text-xs hover:bg-purple-600">Edit Remark</button>
                </a>
                <a href="/remarks/<%= ele.id  %>/delete" class="">
                  <button class="px-1 py-1 bg-red-500 rounded text-white font-medium text-xs hover:bg-blue-600">Delete Remark</button>
                </a>
              </div>
          </article>
          <% }) %>
        </div>
      </section>
    </main>
  </body>
</html>
<%- include('../partials/footer') -%>
